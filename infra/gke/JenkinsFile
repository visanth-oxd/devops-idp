pipeline {
    agent any
    environment {
        GOOGLE_CREDENTIALS = credentials('gcp-terraform-creds')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Terraform Init') {
            steps {
                dir('gke/infra') {
                    sh 'terraform init'
                }
            }
        }
        stage('Terraform Plan') {
            steps {
                dir('gke/infra') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }
        stage('Terraform Apply') {
            steps {
                dir('gke/infra') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }
}