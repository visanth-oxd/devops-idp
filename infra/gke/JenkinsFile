pipeline {
    agent any
    environment {
        GOOGLE_CREDENTIALS = credentials('gcp-terraform-creds')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
            post {
                always {
                    dir('gke/infra') {
                        // This is a no-op command that does nothing. It's only purpose is to change the current directory.
                        sh ''
                    }
                }
            }
        }
        stage('Terraform Init') {
            steps {
                sh 'terraform init'
            }
        }
        stage('Terraform Plan') {
            steps {
                sh 'terraform plan -out=tfplan'
            }
        }
        stage('Terraform Apply') {
            steps {
                sh 'terraform apply -auto-approve tfplan'
            }
        }
    }
}